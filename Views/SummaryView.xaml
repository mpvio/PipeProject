<UserControl x:Class="PipeProject.Views.SummaryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Margin="10">

    <Grid>
        <StackPanel>
            <TextBlock Text="Pipe Summary" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <ListView ItemsSource="{Binding Pipes}" Height="400">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Label" DisplayMemberBinding="{Binding Label}" Width="100"/>
                        <GridViewColumn Header="Type" DisplayMemberBinding="{Binding PipeType}" Width="120"/>
                        <GridViewColumn Header="Diameter (cm)" DisplayMemberBinding="{Binding Diameter, StringFormat=F2}" Width="100"/>
                        <GridViewColumn Header="Length (m)" DisplayMemberBinding="{Binding Length, StringFormat=F2}" Width="100"/>
                        <GridViewColumn Header="Wave Speed" DisplayMemberBinding="{Binding WaveSpeed, StringFormat=F2}" Width="100"/>
                        <GridViewColumn Header="Young's Modulus" DisplayMemberBinding="{Binding YoungsModulus, StringFormat=F2}" Width="120"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <Button Content="Back to Data Entry" Command="{Binding BackCommand}"
                    Width="120" Height="30" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
